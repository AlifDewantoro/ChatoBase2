<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:visibility="gone"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp"
        android:paddingTop="@dimen/dimen_2dp"
        android:paddingBottom="@dimen/dimen_2dp"
        android:background="@drawable/indicator_corner_bg"
        android:textColor="@color/white"
        android:id="@+id/tv_date"
        android:text="HARI INI"
        style="@style/Text.Caption.Bold"
        android:layout_margin="@dimen/dimen_8dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/lay_not_read_yet"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginBottom="@dimen/dimen_6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:visibility="gone"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/dimen_2dp">
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_marginBottom="@dimen/dimen_2dp"
            app:cardCornerRadius="@dimen/dimen_14dp"
            android:layout_centerHorizontal="true"
            app:contentPaddingLeft="@dimen/dimen_16dp"
            app:contentPaddingRight="@dimen/dimen_16dp"
            app:contentPaddingBottom="@dimen/dimen_4dp"
            app:contentPaddingTop="@dimen/dimen_4dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_unread"
                android:text="1 Pesan Belum Terbaca"
                android:textColor="@color/white"
                android:textStyle="bold"
                style="@style/Text.Caption.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lay_message"
        style="@style/clickable"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/lay_not_read_yet">
        <LinearLayout
            android:orientation="vertical"
            android:focusable="true"
            android:id="@+id/lay_container_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:backgroundTint="@color/grey_100"
                android:id="@+id/lay_chat"
                android:background="@drawable/bubble_l_z_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lay_forwarded"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_terusan"
                        android:scaleX="1"
                        android:src="@drawable/ic_forward"
                        android:layout_width="@dimen/dimen_12dp"
                        android:layout_height="@dimen/dimen_12dp"
                        app:tint="@color/grey_500" />
                    <TextView
                        android:id="@+id/tv_terusan"
                        style="@style/Text.Caption.Italic"
                        android:layout_marginLeft="@dimen/dimen_2dp"
                        android:layout_width="wrap_content"
                        android:textColor="@color/grey_500"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:text="@string/label_forwarded"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/Text.Standard.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintHorizontal_bias="0.5"
                        tools:text="Ronald Perkins" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.gamatechno.chato.sdk.utils.animation.AnimationToggle
                        android:id="@+id/container_reply"
                        style="@style/clickable"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="wrap_content"
                        android:visibility="visible"
                        android:layout_marginTop="@dimen/dimen_4dp"
                        android:layout_height="match_parent">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="4dp"
                                android:layout_height="0dp"
                                android:scaleType="fitXY"
                                android:background="@drawable/quote_vertical_blue_bar"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent">

                            </LinearLayout>
                            <RelativeLayout
                                android:id="@+id/lay_reply"
                                android:padding="@dimen/dimen_4dp"
                                android:layout_marginLeft="@dimen/dimen_4dp"
                                android:background="#59FFFFFF"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:ignore="MissingConstraints">
                                <ImageView
                                    android:visibility="gone"
                                    android:id="@+id/img_replied_message"
                                    android:layout_width="@dimen/dimen_42dp"
                                    android:layout_height="@dimen/dimen_42dp" />
                                <LinearLayout
                                    android:layout_marginLeft="@dimen/dimen_6dp"
                                    android:layout_toRightOf="@+id/img_replied_message"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/tv_replied_title"
                                        android:textColor="@color/colorPrimary"
                                        style="@style/Text.Standard.Bold.OneRow"
                                        android:text="Al"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                    <TextView
                                        android:id="@+id/tv_replied_message"
                                        style="@style/Text.Standard"
                                        android:maxLines="3"
                                        android:ellipsize="end"
                                        android:text="Beginilah Beginilah Beginilah Beginilah Beginilah"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                </LinearLayout>
                            </RelativeLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.gamatechno.chato.sdk.utils.animation.AnimationToggle>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/lay_action_loading"
                                android:layout_width="@dimen/dimen_48dp"
                                android:layout_height="@dimen/dimen_48dp"
                                app:cardCornerRadius="@dimen/dimen_24dp"
                                android:visibility="visible"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@color/colorPrimary">
                                <ProgressBar
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="9dp"
                                    android:indeterminate="true"
                                    android:indeterminateTintMode="src_atop"
                                    android:indeterminateTint="@color/white"/>
                            </androidx.cardview.widget.CardView>
                            <com.gamatechno.chato.sdk.utils.animation.AnimationToggle
                                android:id="@+id/lay_play_pause"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/lay_action_pause"
                                    android:layout_width="@dimen/dimen_48dp"
                                    android:layout_height="@dimen/dimen_48dp"
                                    app:cardCornerRadius="@dimen/dimen_24dp"
                                    android:visibility="visible"
                                    app:cardElevation="0dp"
                                    app:cardBackgroundColor="@color/colorPrimary">
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_pause_chat"
                                        android:layout_margin="8dp"
                                        android:layout_gravity="center"/>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/lay_action_play"
                                    android:layout_width="@dimen/dimen_48dp"
                                    android:layout_height="@dimen/dimen_48dp"
                                    app:cardCornerRadius="@dimen/dimen_24dp"
                                    app:cardElevation="0dp"
                                    android:visibility="visible"
                                    app:cardBackgroundColor="@color/colorPrimary">
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_play_chat"
                                        android:layout_margin="8dp"
                                        android:layout_gravity="center"/>
                                </androidx.cardview.widget.CardView>
                            </com.gamatechno.chato.sdk.utils.animation.AnimationToggle>

                        </RelativeLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <SeekBar
                                android:id="@+id/sbTrack"
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:thumbTint="@color/colorPrimary"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginLeft="8dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/tvTimerSeek"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0:00"
                                    style="@style/Text.Caption"/>
                                <TextView
                                    android:id="@+id/tvTimer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="/0:00"
                                    style="@style/Text.Caption"/>

                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/lay_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <com.gamatechno.chato.sdk.utils.ChatoText.ExpandableTextView
                            android:textColor="@color/black"
                            android:id="@+id/tv_message"
                            android:textColorLink="@color/blue_500"
                            style="@style/Text.Standard"
                            android:layout_width="wrap_content"
                            android:autoLink="phone|web"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="4dp"
                            android:layout_marginBottom="2dp"
                            tools:text="Ajnakjs " />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/lay_status"
                        android:layout_gravity="right"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <ImageView
                            android:visibility="gone"
                            android:src="@drawable/ic_star_full"
                            android:id="@+id/img_star"
                            android:layout_marginRight="@dimen/dimen_4dp"
                            android:layout_width="@dimen/dimen_14dp"
                            android:layout_height="@dimen/dimen_14dp" />
                        <ImageView
                            android:id="@+id/img_broadcast"
                            android:layout_width="wrap_content"
                            android:layout_height="12dp"
                            app:tint="@color/colorPrimary"
                            android:src="@drawable/ic_broadcast"
                            android:visibility="gone"/>
                        <TextView
                            android:id="@+id/tv_time"
                            style="@style/Text.Caption"
                            android:layout_width="wrap_content"
                            android:layout_marginRight="@dimen/dimen_4dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_2dp"
                            tools:text="11:45 PM" />
                        <ImageView
                            android:id="@+id/img_receipt"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_check_unread_24dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>