<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginBottom="@dimen/dimen_8dp"
        app:cardBackgroundColor="@color/colorMonocrome10"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:minWidth="300dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/dimen_24dp">

            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorAccent3"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/dimen_16dp"
                tools:text="@string/out_from_group"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/tvMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorAccent3"
                tools:text="@string/out_from_group_question"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:textAlignment="center"/>

            <LinearLayout
                android:id="@+id/btCon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    style="@style/ButtonNegativeStyle"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    app:backgroundTint="@null"/>

                <Button
                    android:id="@+id/btnYes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    style="@style/ButtonPositiveStyle"
                    android:text="@string/yes"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    app:backgroundTint="@null"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>