<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_pattern"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gamatechno.chato.sdk.app.chatroom.ChatRoomActivity">
    <include layout="@layout/toolbar_chatroom"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_above="@+id/container_reply"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"/>
            <ProgressBar
                android:visibility="gone"
                android:id="@+id/pb"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <include layout="@layout/layout_helper" />
        </RelativeLayout>
        <com.gamatechno.chato.sdk.utils.animation.AnimationToggle
            android:background="@color/grey_50"
            style="@style/clickable"
            android:visibility="gone"
            android:id="@+id/container_pinned_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/grey_100"
                app:contentPadding="@dimen/dimen_8dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="@dimen/dimen_2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:minWidth="@dimen/dimen_108dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_close_pinnedchat"
                        style="@style/clickable"
                        android:layout_width="@dimen/dimen_20dp"
                        android:layout_height="@dimen/dimen_20dp"
                        android:layout_alignParentRight="true"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/ic_cancel"
                        app:layout_constraintEnd_toEndOf="@+id/relativeLayout_pinned"
                        />
                    <LinearLayout
                        android:layout_width="4dp"
                        android:layout_height="0dp"
                        android:scaleType="fitXY"
                        android:background="@drawable/quote_vertical_blue_bar"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent">

                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/relativeLayout_pinned"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#59FFFFFF"
                        android:padding="@dimen/dimen_4dp"
                        tools:layout_editor_absoluteX="4dp"
                        app:layout_constraintTop_toTopOf="parent">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_6dp"
                            android:orientation="vertical">
                            <TextView
                                style="@style/Text.Standard.Bold.OneRow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pesan Tersemat"
                                android:textColor="@color/colorPrimary" />
                            <TextView
                                android:id="@+id/tvgroup_pinned_message"
                                style="@style/Text.Standard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="3"
                                android:text="Beginilah Beginilah Beginilah Beginilah Beginilah" />
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


        </com.gamatechno.chato.sdk.utils.animation.AnimationToggle>
        <com.gamatechno.chato.sdk.utils.animation.AnimationToggle
            android:visibility="gone"
            android:background="@color/grey_50"
            android:id="@+id/container_reply"
            android:layout_above="@+id/lay_action_attachment"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/dimen_2dp"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:contentPadding="@dimen/dimen_8dp"
                app:cardCornerRadius="@dimen/dimen_2dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="@dimen/dimen_1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:background="@drawable/quote_vertical_blue_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:padding="@dimen/dimen_4dp"
                        android:layout_marginLeft="@dimen/dimen_4dp"
                        android:background="@color/grey_200"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/img_replied_message"
                            android:layout_width="@dimen/dimen_42dp"
                            android:layout_height="@dimen/dimen_42dp" />
                        <LinearLayout
                            android:layout_marginLeft="@dimen/dimen_6dp"
                            android:layout_toRightOf="@+id/img_replied_message"
                            android:layout_toLeftOf="@+id/img_replied_close"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_replied_title"
                                android:textColor="@color/colorPrimary"
                                style="@style/Text.Standard.Bold"
                                android:text="Lorem Ipsum Bla bla bla "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tv_replied_message"
                                style="@style/Text.Standard"
                                android:maxLines="3"
                                android:ellipsize="end"
                                android:text="Foto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/img_replied_close"
                            style="@style/clickable"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_cancel"
                            android:layout_width="@dimen/dimen_16dp"
                            android:layout_height="@dimen/dimen_16dp"
                            app:tint="@color/grey_600" />
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </com.gamatechno.chato.sdk.utils.animation.AnimationToggle>
        <com.gamatechno.chato.sdk.utils.animation.AnimationToggle
            android:visibility="gone"
            android:id="@+id/lay_mention_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_200"
            android:paddingTop="@dimen/dimen_8dp"
            android:paddingLeft="@dimen/dimen_8dp"
            android:paddingRight="@dimen/dimen_8dp"
            android:layout_marginBottom="-4dp"
            android:layout_above="@+id/lay_bottom_chat">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_mention"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_224dp"
                tools:listitem="@layout/item_mention"/>
        </com.gamatechno.chato.sdk.utils.animation.AnimationToggle>
        <com.gamatechno.chato.sdk.utils.animation.AnimationToggle
            android:visibility="gone"
            android:id="@+id/lay_action_attachment"
            android:layout_marginBottom="-4dp"
            android:padding="@dimen/dimen_8dp"
            android:layout_above="@+id/lay_bottom_chat"
            android:background="@color/grey_200"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_attachment_close"
                style="@style/clickable"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_20dp"
                android:src="@drawable/ic_cancel"
                app:tint="@color/grey_700" />

            <ImageView
                android:id="@+id/img_attachment"
                style="@style/clickable"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp" />
            <TextView
                android:id="@+id/tv_attachment"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:layout_toRightOf="@+id/img_attachment"
                android:layout_toLeftOf="@+id/img_attachment_close"
                android:text="Memuat..."
                style="@style/Text.Standard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.gamatechno.chato.sdk.utils.animation.AnimationToggle>
        <RelativeLayout
            android:id="@+id/lay_bottom_chat"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/lay_no_action_chat"
                android:padding="@dimen/dimen_8dp"
                android:background="@color/grey_300"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_no_action_chat"
                    android:textAlignment="center"
                    android:text="Anda sudah keluar dari grup"
                    style="@style/Text.Caption.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_chat_act"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_16dp"
                android:paddingRight="@dimen/dimen_10dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/lay_action_chat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/dimen_24dp"
                    android:layout_marginRight="@dimen/dimen_6dp"
                    android:layout_marginBottom="@dimen/dimen_16dp">
                    <com.gamatechno.chato.sdk.utils.animation.AnimationToggle
                        android:id="@+id/lay_on_chat_or_record"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/lay_onchat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible">
                            <com.gamatechno.chato.sdk.utils.animation.AnimationToggle
                                android:id="@+id/lay_action"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <RelativeLayout
                                    android:id="@+id/lay_attachment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        style="@style/clickable"
                                        android:id="@+id/img_attach"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:tint="@color/colorPrimary"
                                        android:padding="@dimen/dimen_8dp"
                                        android:src="@drawable/ic_attachment_black_24dp" />
                                    <ImageView
                                        style="@style/clickable"
                                        android:layout_toRightOf="@+id/img_attach"
                                        android:layout_marginRight="@dimen/dimen_8dp"
                                        android:padding="@dimen/dimen_8dp"
                                        android:id="@+id/img_camera"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:tint="@color/colorPrimary"
                                        android:src="@drawable/ic_camera_alt_black_24dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent" />
                                </RelativeLayout>
                                <ImageView
                                    android:visibility="gone"
                                    style="@style/clickable"
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@+id/img_attach"
                                    android:padding="@dimen/dimen_8dp"
                                    android:id="@+id/img_send"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_send"
                                    app:tint="@color/colorPrimary"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    />
                            </com.gamatechno.chato.sdk.utils.animation.AnimationToggle>

                            <ImageView
                                android:id="@+id/img_emoticon"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:padding="@dimen/dimen_12dp"
                                android:src="@drawable/ic_tag_faces_black_24dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_goneMarginLeft="@dimen/dimen_8dp"
                                app:tint="@color/colorPrimary" />
                            <com.gamatechno.chato.sdk.utils.ChatoEditText.ChatEditText
                                android:id="@+id/edt_message"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:emojiconSize="28sp"
                                android:padding="@dimen/dimen_4dp"
                                style="@style/Text.Standard"
                                android:layout_marginStart="48dp"
                                android:maxLines="4"
                                android:layout_marginEnd="88dp"
                                android:background="@null"
                                android:hint="Ketik Pesan"
                                android:inputType="textCapSentences|textMultiLine"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/lay_action"
                                app:layout_constraintStart_toEndOf="@+id/img_emoticon"
                                app:layout_constraintTop_toTopOf="parent"/>
                            <!--<EditText
                                android:visibility="invisible"
                                android:id="@+id/edt_message"
                                android:layout_marginTop="@dimen/dimen_8dp"
                                android:layout_marginBottom="@dimen/dimen_8dp"
                                android:padding="@dimen/dimen_4dp"
                                style="@style/Text.Standard"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="40dp"
                                android:maxLines="4"
                                android:layout_marginLeft="40dp"
                                android:layout_marginEnd="80dp"
                                android:layout_marginRight="80dp"
                                android:background="@null"
                                android:hint="Tulis Pesan Anda disini"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/lay_action"
                                app:layout_constraintStart_toEndOf="@+id/img_emoticon"
                                app:layout_constraintTop_toTopOf="parent" />-->


                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <LinearLayout
                            android:id="@+id/lay_onrecord"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:visibility="gone"
                            android:background="@color/white"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_weight="1">
                                <ImageView
                                    android:id="@+id/iv_onrecord"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_mic"
                                    app:tint="@color/red"
                                    android:layout_marginLeft="16dp"/>
                                <TextView
                                    android:id="@+id/tv_count_record"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0:00"
                                    android:textSize="16sp"
                                    android:layout_marginLeft="8dp"/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/tv_cancel_record"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/cancel"
                                android:textColor="@color/red"
                                android:gravity="center"
                                android:paddingRight="@dimen/dimen_16dp"
                                android:paddingLeft="@dimen/dimen_16dp"/>
                        </LinearLayout>
                    </com.gamatechno.chato.sdk.utils.animation.AnimationToggle>
                </androidx.cardview.widget.CardView>

                <com.gamatechno.chato.sdk.utils.animation.AnimationToggle
                    android:id="@+id/lay_action_mic_or_send"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/lay_action_mic"
                        android:layout_width="@dimen/dimen_48dp"
                        android:layout_height="@dimen/dimen_48dp"
                        app:cardCornerRadius="@dimen/dimen_24dp"
                        android:visibility="visible"
                        app:cardBackgroundColor="@color/colorPrimary"
                        android:layout_marginRight="@dimen/dimen_6dp">
                        <ImageView
                            android:layout_width="@dimen/dimen_20dp"
                            android:layout_height="@dimen/dimen_20dp"
                            android:src="@drawable/ic_mic"
                            android:layout_gravity="center"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/lay_action_send"
                        android:layout_width="@dimen/dimen_48dp"
                        android:layout_height="@dimen/dimen_48dp"
                        app:cardCornerRadius="@dimen/dimen_24dp"
                        android:visibility="gone"
                        android:layout_marginRight="@dimen/dimen_6dp"
                        app:cardBackgroundColor="@color/colorPrimary">
                        <ImageView
                            android:layout_width="@dimen/dimen_20dp"
                            android:layout_height="@dimen/dimen_20dp"
                            android:src="@drawable/ic_send"
                            android:layout_gravity="center"/>
                    </androidx.cardview.widget.CardView>
                </com.gamatechno.chato.sdk.utils.animation.AnimationToggle>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_menu_attach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_chat_act"
                android:orientation="horizontal"
                android:visibility="gone"
                android:focusable="true"
                android:clickable="true">
                <LinearLayout
                    android:id="@+id/lay_document"
                    style="@style/clickable"
                    android:padding="20dp"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/dimen_48dp"
                        android:layout_height="@dimen/dimen_48dp"
                        android:padding="@dimen/dimen_12dp"
                        android:background="@drawable/bg_rounded_full"
                        android:backgroundTint="@color/colorPrimary"
                        app:tint="@color/white"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_dokumen"/>
                    <TextView
                        style="@style/Text.Standard"
                        android:text="Dokumen"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorMonocrome90"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lay_record_video"
                    style="@style/clickable"
                    android:padding="20dp"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/dimen_48dp"
                        android:layout_height="@dimen/dimen_48dp"
                        android:padding="@dimen/dimen_12dp"
                        android:background="@drawable/bg_rounded_full"
                        android:backgroundTint="@color/colorPrimary"
                        app:tint="@color/white"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_camera_alt_black_24dp"/>
                    <TextView
                        android:textAlignment="center"
                        style="@style/Text.Standard"
                        android:text="Rekam Video"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorMonocrome90"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lay_gallery"
                    style="@style/clickable"
                    android:padding="20dp"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/dimen_48dp"
                        android:layout_height="@dimen/dimen_48dp"
                        android:padding="@dimen/dimen_12dp"
                        android:background="@drawable/bg_rounded_full"
                        android:backgroundTint="@color/colorPrimary"
                        app:tint="@color/white"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_galeri"/>
                    <TextView
                        style="@style/Text.Standard"
                        android:text="Galeri"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorMonocrome90"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_above="@+id/container_reply"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                app:fabSize="mini"
                android:tint="@color/white"
                android:id="@+id/fab_down"
                android:visibility="visible"
                android:stateListAnimator="@null"
                app:backgroundTint="@color/colorPrimaryDark"
                app:tint="@color/white"
                android:layout_marginBottom="@dimen/dimen_8dp"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:layout_width="wrap_content"
                app:maxImageSize="@dimen/dimen_16dp"
                android:src="@drawable/ic_icon_floating_down"
                android:layout_height="wrap_content"
                app:shapeAppearanceOverlay="@style/FabAppearance" />
            <RelativeLayout
                android:visibility="gone"
                android:layout_marginLeft="@dimen/dimen_6dp"
                android:id="@+id/fab_num"
                android:elevation="6dp"
                android:background="@drawable/bg_circle_red"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_num"
                    android:textColor="@color/white"
                    style="@style/Text.Caption"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:text="1"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>

        <include layout="@layout/dialog_menu_chatroom"/>
    </RelativeLayout>
</LinearLayout>
