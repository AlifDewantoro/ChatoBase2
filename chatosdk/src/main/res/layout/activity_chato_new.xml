<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.main.ChatoActivity">

    <View
        android:id="@+id/bgMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.gamatechno.chato.sdk.utils.animation.AnimationToggle
                android:id="@+id/wrapper_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/lay_search"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:background="@color/colorPurple10"
                    android:layout_height="@dimen/dimen_56dp">
                    <ImageView
                        android:padding="@dimen/dimen_16dp"
                        android:id="@+id/img_back_search"
                        style="@style/clickable"
                        android:src="@drawable/ic_cancel_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RelativeLayout
                        android:layout_marginStart="@dimen/dimen_16dp"
                        android:layout_marginEnd="@dimen/dimen_16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/ll_search"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/edt_search"
                                android:textSize="14dp"
                                android:hint="Cari Obrolan disini"
                                android:maxLines="1"
                                android:textColor="@color/colorMonocrome100"
                                android:textColorHint="@color/colorMonocrome100"
                                android:inputType="text"
                                android:imeOptions="actionSearch"
                                android:background="@android:color/transparent"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"/>
                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/img_clear_search"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_16dp"
                                android:src="@drawable/ic_clear_white" />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_marginStart="@dimen/dimen_8dp"
                            android:id="@+id/lay_appbar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@+id/lay_items"
                                android:layout_toLeftOf="@+id/lay_items"
                                style="@style/Text.Title.Banner"
                                android:id="@+id/tv_action_title"
                                android:textSize="@dimen/dimen_20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorMonocrome100"
                                android:text="0"
                                android:maxLines="1"
                                android:ellipsize="end" />
                            <LinearLayout
                                android:id="@+id/lay_items"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:visibility="gone"
                                    app:tint="@color/colorPrimary"
                                    android:id="@+id/img_label"
                                    android:src="@drawable/ic_label"
                                    android:layout_width="@dimen/dimen_24dp"
                                    android:layout_height="@dimen/dimen_24dp" />
                                <ImageView
                                    android:visibility="visible"
                                    android:layout_marginStart="@dimen/dimen_16dp"
                                    android:id="@+id/img_delete_chat"
                                    app:tint="@color/colorPrimary"
                                    android:src="@drawable/ic_delete_message"
                                    android:layout_width="@dimen/dimen_24dp"
                                    android:layout_height="@dimen/dimen_24dp" />
                                <ImageView
                                    android:layout_marginStart="@dimen/dimen_16dp"
                                    app:tint="@color/colorPrimary"
                                    android:id="@+id/img_pin"
                                    android:src="@drawable/ic_pin_chat"
                                    android:layout_width="@dimen/dimen_24dp"
                                    android:layout_height="@dimen/dimen_24dp" />
                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lay_top"
                    android:orientation="vertical"
                    android:background="@color/colorToolbar"
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_height="wrap_content">
                    <com.google.android.material.appbar.AppBarLayout
                        android:layout_width="match_parent"
                        android:elevation="0dp"
                        android:stateListAnimator="@null"
                        android:background="@color/colorToolbar"
                        android:layout_height="wrap_content">
                        <com.gamatechno.chato.sdk.utils.SmartOfficeToolbar
                            android:id="@+id/toolbar"
                            app:title=""
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@color/transparent"
                            android:visibility="visible"
                            app:titleTextColor="@color/grey_700"
                            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
                            <TextView
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:id="@+id/toolbar_title"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="18dp"
                                android:gravity="center_vertical"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorToolbarText"
                                android:fontFamily="@font/thefont"
                                android:text="Chat" />
                            <ImageView
                                android:visibility="gone"
                                android:layout_width="@dimen/dimen_128dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_logo_space"/>
                        </com.gamatechno.chato.sdk.utils.SmartOfficeToolbar>
                    </com.google.android.material.appbar.AppBarLayout>
                    <com.google.android.material.tabs.TabLayout
                        android:visibility="gone"
                        android:id="@+id/tablayout"
                        android:layout_marginLeft="@dimen/padding_item_default"
                        android:layout_marginRight="@dimen/padding_item_default"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:minHeight="@dimen/actionbar_dimen"
                        app:tabMaxWidth="0dp"
                        android:background="@color/white"
                        app:tabGravity="fill"
                        app:tabMode="fixed"
                        app:tabIndicatorColor="@color/colorPrimary"
                        app:tabIndicatorHeight="@dimen/dimen_2dp"/>
                </LinearLayout>
            </com.gamatechno.chato.sdk.utils.animation.AnimationToggle>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_gradien_new">
            <LinearLayout
                android:id="@+id/llChatTabs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_marginBottom="25dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#F9F9FC"
                    app:cardCornerRadius="21.5dp"
                    app:cardElevation="@dimen/dimen_2dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp">
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tlChat"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        android:background="@color/transparent"
                        app:tabGravity="fill"
                        app:tabIndicatorHeight="0dp"
                        app:tabIndicator="@drawable/indicator_bg_chat"
                        app:tabIndicatorColor="@color/colorPrimary"
                        app:tabIndicatorGravity="stretch"
                        app:tabMode="fixed"
                        app:tabRippleColor="@null"
                        app:tabSelectedTextColor="@color/white"
                        app:tabTextAppearance="@style/TabLayoutTextStyle"
                        app:tabTextColor="#767A9B" />
                </androidx.cardview.widget.CardView>

                <com.gamatechno.chato.sdk.utils.NoSwipePager
                    android:id="@+id/vpChat"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context=".app.chatrooms.ChatRoomsFragment">
                    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                        android:id="@+id/swipe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="match_parent">
                                <LinearLayout
                                        android:visibility="gone"
                                    android:id="@+id/lay_filtered"
                                    android:paddingLeft="@dimen/dimen_16dp"
                                    android:paddingRight="@dimen/dimen_16dp"
                                    android:paddingTop="@dimen/dimen_8dp"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:id="@+id/filtered_categories"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:text="Filter Chat"
                                            android:layout_width="wrap_content"
                                            style="@style/Text.Standard"
                                            android:paddingLeft="@dimen/dimen_16dp"
                                            android:paddingRight="@dimen/dimen_16dp"
                                            android:paddingTop="@dimen/dimen_2dp"
                                            android:paddingBottom="@dimen/dimen_2dp"
                                            android:background="@drawable/filter_filled_header"
                                            android:layout_height="wrap_content"/>
                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/rv_filter"
                                            android:layout_width="match_parent"
                                            android:layout_marginLeft="5dp"
                                            android:scrollbarAlwaysDrawHorizontalTrack="true"
                                            android:scrollbarSize="2dp"
                                            android:scrollbarStyle="insideInset"
                                            android:scrollbarThumbVertical="@color/black"
                                            android:scrollbars="horizontal"
                                            tools:itemCount="4"
                                            tools:listitem="@layout/adapter_room_filter"
                                            android:orientation="horizontal"
                                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                            android:layout_height="wrap_content"/>
                                    </LinearLayout>
                                </LinearLayout>
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rv"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    tools:listitem="@layout/adapter_chat_rooms">
                                </androidx.recyclerview.widget.RecyclerView>
                            </LinearLayout>
                            <include layout="@layout/layout_helper"/>
                        </RelativeLayout>
                    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <com.gamatechno.chato.sdk.utils.animation.AnimationToggle
                android:id="@+id/toggle_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content">
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab_add"
                        android:src="@drawable/ic_add_chat"
                        app:tint="@color/white"
                        app:backgroundTint="@color/colorPrimaryDark"
                        app:shapeAppearanceOverlay="@style/FabAppearanceChato"
                        android:layout_marginRight="@dimen/dimen_16dp"
                        android:layout_marginBottom="36dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </com.gamatechno.chato.sdk.utils.animation.AnimationToggle>
            <RelativeLayout
                android:id="@+id/lay_searchlist"
                android:visibility="visible"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_searchlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/noData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Text.Title"
                    android:text="@string/helper_nodata"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dimen_16dp"/>
                <!--
                <include layout="@layout/layout_helper"/>
                -->
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
